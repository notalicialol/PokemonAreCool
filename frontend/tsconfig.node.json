{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,
		"composite": true,

		/* Aliases */
		"paths": {
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@routes/*": ["src/routes/*"],
			"@stores/*": ["src/stores/*"],
			"@styles/*": ["src/styles/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
		},
		"baseUrl": "./",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"moduleDetection": "force",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["vite.config.ts", "src", "src/**/*.d.ts"]
}
